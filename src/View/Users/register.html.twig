{% extends 'layout.html.twig' %}

{% block stylesheet %}<link rel="stylesheet" href="/assets/css/Users/sign.css">
{% endblock %}

{% block content %}

	<h1 class="text-center mt-5 mb-5">Inscription</h1>

	<div class="container">
		<div class="row">
			<div class="col-lg-6 p-5">
				<p class="bg-white mb-0 fs-5 p-3 rounded-top text-center fw-bold">
					Toi quand tu dois t'enregistrer
				</p>
				<img id="image" src="assets/images/angrycat.jpg" class="img-fluid rounded-bottom" alt="your image">
			</div>
			<div class="col-lg-6 p-5">
				<div class="card-body">
					<form action="" method="post">
						<div class="mb-4 text-white">
							<label for="pseudo" class="form-label">Pseudo</label>
							<input type="text" class="form-control" id="pseudo" name="pseudo" required/>
						</div>
						<div class="mb-4 text-white">
							<label for="email" class="form-label">Email</label>
							<input type="email" class="form-control" id="email" name="email" required/>
						</div>
						<div class="mb-4 text-white">
							<label for="password" class="form-label">Password</label>
							<input type="password" class="form-control" id="password" name="password" required/>
						</div>
						<div class="text-center">
							<button type="submit" style="width: 10rem" class="mb-5 mt-5 btn btn-outline-danger btn-lg text-center">Valider</button>
						</div>
						{% if dataErrors %}
							<ul>
								{% for error in dataErrors %}
									<li>{{ error }}</li>
								{% endfor %}
							</ul>
						{% endif %}
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
